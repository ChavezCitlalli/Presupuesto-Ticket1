<header>
    <div class="container-fluid">
        <div class="row">
          <nav class="navbar navbar-expand-lg navbar-dark bg-light navegacion-color col-12">
            <a class="navbar-brand mx-5" href="/index"><i class='bn btn-outline-white text-white'></i> Inicio </a>

            <div class="collapse navbar-collapse" id="navbarResponsive"></div>
            
            <ul class="navbar-nav ml-auto">
              <li class="nav-item">
                <a class="nav-link" id="userlink"><span id="name" class="text text-center text-white">User Name</span></a>
              </li>
              <li class="nav-item">
                <a onclick="cerrarSesion()" class="btn btn-outline-white  text-white mx-5">Cerrar Sesi√≥n</a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
    <script>
        let inicioDeSesion = localStorage.getItem('dataUsuario')
        if(inicioDeSesion != null){
            iniciarSesion();
        }




        function iniciarSesion(){
            const usuario = document.getElementById("name");
            const linkuser = document.getElementById("userlink");
            usuario.innerHTML ="";
            let resultado = JSON.parse(localStorage.getItem('dataUsuario'));
            usuario.innerHTML = `${resultado.user}`;
            linkuser.setAttribute("href", `/usuario/${resultado.id}`);
        }
        function cerrarSesion(){
            localStorage.removeItem('dataUsuario');
            setTimeout(() => {
            window.location = '/login'
        }, 1500);
        }
    </script>
</header>
